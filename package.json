{
  "scripts": {
    "clean": "rimraf \"packages/*/build/!(.git)\"",
    "build": "npm run clean && run-p build:*",
    "build:cli": "babel packages/cli/src -d packages/cli/build -s",
    "build:node": "babel packages/node/src -d packages/node/build -s",
    "build:shared": "babel packages/shared/src -d packages/shared/build -s",
    "build:web": "babel packages/web/src -d packages/web/build -s",
    "dev": "npm run clean && run-p dev:*",
    "dev:cli": "babel packages/cli/src -d packages/cli/build -s -w",
    "dev:node": "babel packages/node/src -d packages/node/build -s -w",
    "dev:shared": "babel packages/shared/src -d packages/shared/build -s -w",
    "dev:web": "babel packages/web/src -d packages/web/build -s -w",
    "start": "npm run dev",
    "postinstall": "lerna boostrap"
  },
  "devDependencies": {
    "babel-preset-ctrine-lib": "^1.4.4",
    "ctrine-dev-preset": "^4.0.2",
    "lerna": "^2.0.0-rc.5"
  }
}
